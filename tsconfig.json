{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@lib/types/*": ["lib/types/*"],
      "@configs/*": ["lib/config/*"],
      "@hooks/*": ["lib/hooks/*"],
      "@utils/*": ["lib/utils/*"],
      "@const/*": ["lib/const/*"],
      "@public/*": ["public/*"],
      "@components/*": ["components/*"],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "jsx": "react"
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}
